#include <stdio.h>

int main() {
    int total_students, teams;

    scanf("%d", &total_students);
    scanf("%d", &teams);

    int students_in_each_team = total_students / teams;
    int left_out_students = total_students % teams;

    printf("%d\n", students_in_each_team);
    printf("%d\n", left_out_students);

    return 0;
}
